<%= form_with(model: coin, local: true) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :acronym %>
    <%= form.text_field :acronym, class: "form-control" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :url_image %>
    <%= form.text_field :url_image, class: "form-control"  %>
    <%#=image_tag coin.url_image, width: 25, height: 25%>

    <% if @coin.url_image != nil
    image_tag coin.url_image, size: "25x25" %>
    <% end %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :mining_type_id %>
    <%= form.select("mining_type_id", @mining_type_options, {include_blank: "Selecione um tipo"}, class: "form-control") %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit nil , class: "btn btn-primary"%>
  </div>

<% end %>
